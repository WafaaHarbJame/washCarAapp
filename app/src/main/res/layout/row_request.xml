<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="start"
    android:gravity="center_vertical|start"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_4sdp"
    app:strokeColor="@color/colorAccent"
    app:strokeWidth="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rowLY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <com.washcar.app.spichalViews.STextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_provider"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_13ssp" />

        <com.washcar.app.spichalViews.STextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/gray4"
            android:textSize="@dimen/_13ssp" />
       

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/gray_view"
             />

        <com.washcar.app.spichalViews.STextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selected_car"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_13ssp" />

        <com.washcar.app.spichalViews.STextView
            android:id="@+id/carNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/car_wash"
            android:textAlignment="viewStart"
            android:textColor="@color/gray4"
            android:textSize="@dimen/_13ssp" />
        <com.washcar.app.spichalViews.STextView
            android:id="@+id/carTypeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/car_wash"
            android:textAlignment="viewStart"
            android:textColor="@color/gray4"
            android:textSize="@dimen/_13ssp" />
        <com.washcar.app.spichalViews.STextView
            android:id="@+id/carModelTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/car_wash"
            android:textAlignment="viewStart"
            android:textColor="@color/gray4"
            android:textSize="@dimen/_13ssp" />
        <com.washcar.app.spichalViews.STextView
            android:id="@+id/carPlatNumberTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/car_wash"
            android:textAlignment="viewStart"
            android:textColor="@color/gray4"
            android:textSize="@dimen/_13ssp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/gray_view"
             />
        <com.washcar.app.spichalViews.STextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_time"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_13ssp" />

        <com.washcar.app.spichalViews.STextView
            android:id="@+id/dateTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="22 may 2022"
            android:textAlignment="viewStart"
            android:textColor="@color/gray4"
            android:textSize="@dimen/_13ssp" />


        <com.washcar.app.spichalViews.STextView
            android:id="@+id/timeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="10:00 pm"
            android:textAlignment="viewStart"
            android:textColor="@color/gray4"
            android:textSize="@dimen/_13ssp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/gray_view"
            />
        <com.washcar.app.spichalViews.STextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_selected"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_13ssp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/row_selected_service" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/gray_view"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp">


            <com.washcar.app.spichalViews.STextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:minWidth="@dimen/_20sdp"
                android:minHeight="@dimen/_20sdp"
                android:text="@string/total_price"
                android:textColor="@color/gray4"
                android:textSize="@dimen/_13ssp" />

            <com.washcar.app.spichalViews.STextView
                android:id="@+id/totalTv"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:text="150 SAR"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>
        <com.loopeer.shadow.ShadowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            app:backgroundColor="@color/white"
            app:cornerRadius="@dimen/round_corner_thin"
            app:shadowColor="@color/colorPrimaryTrans"
            app:shadowRadius="@dimen/_8sdp">

            <com.washcar.app.spichalViews.STextViewBold
                android:id="@+id/rateBut"
                style="@style/primaryBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Rate"
                android:textColor="@color/white" />

        </com.loopeer.shadow.ShadowView>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>