<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray2"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_6sdp">

                <com.washcar.app.spichalViews.STextViewBold
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <com.washcar.app.spichalViews.STextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <com.washcar.app.spichalViews.STextView
                    android:id="@+id/tvWorkTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="work time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone" />

                <!--            <com.washcar.app.spichalViews.STextViewBold-->
                <!--                android:id="@+id/tvType"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:background="@drawable/round_corner_primary_fill"-->
                <!--                android:paddingHorizontal="@dimen/_5sdp"-->
                <!--                android:paddingVertical="@dimen/_2sdp"-->
                <!--                android:text="@string/service_provider"-->
                <!--                android:textColor="@color/white"-->
                <!--                android:textSize="@dimen/_12ssp" />-->

            </LinearLayout>

            <com.washcar.app.spichalViews.SSwitch
                android:id="@+id/swAnnounced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_6sdp"
                android:switchPadding="@dimen/_5sdp"
                android:text="@string/announced"
                android:visibility="gone" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>