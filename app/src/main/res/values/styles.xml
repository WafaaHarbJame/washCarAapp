<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>


        <!--        <item name="android:fitsSystemWindows">true</item>-->

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="RatingBarStyle2" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/gray13</item>
        <item name="colorControlActivated">@color/order_pending</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>


        <!--        <item name="android:fitsSystemWindows">true</item>-->

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowContentTransitions">true</item>

    </style>


    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusTopStart">@dimen/round_corner_thin</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/hintTextColor</item>

    </style>

    <style name="hintTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="primaryBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corner_primary_fill</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <!--<item name="android:fontFamily">@font/swissra_normal</item>-->
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <!--        <item name="android:background">@android:color/transparent</item>-->
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/gray6</item>

    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.Colored">

        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="fontFamily">@font/sky_reg</item>
        <item name="tabTextColor">@color/colorAccent3</item>
        <item name="tabTextAppearance">@style/TabTextSize</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="TabTextSize" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/_12ssp</item>
        <!--        <item name="android:textColor">?android:attr/textColorSecondary</item>-->
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray6</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>